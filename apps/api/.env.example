# StudyRAG API Environment Configuration
# Copy this file to .env and fill in your actual values

# ==============================================
# API Configuration
# ==============================================

# Set to true for development, false for production
DEBUG=true

# API version (set automatically, but can override)
API_VERSION=0.1.0

# CORS allowed origins (comma-separated list)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# ==============================================
# Database Configuration  
# ==============================================

# PostgreSQL connection string
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://postgres:your_password@localhost:5432/postgres

# ==============================================
# Supabase Configuration
# ==============================================

# Your Supabase project URL
SUPABASE_URL=https://your-project-id.supabase.co

# Supabase anon key (for client-side requests)
SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# Supabase service role key (for server-side requests) 
# ⚠️  KEEP SECRET! Never commit this key or use in frontend
SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# ==============================================
# OpenAI Configuration
# ==============================================

# OpenAI API key for embeddings and LLM
OPENAI_API_KEY=sk-...

# ==============================================
# Document Processing Settings
# ==============================================

# Maximum file size in MB
MAX_FILE_SIZE_MB=50

# Default chunk size in tokens (300-800 recommended)
CHUNK_SIZE=500

# Chunk overlap percentage (0.1 = 10%, 0.15 = 15%)
CHUNK_OVERLAP=0.12

# ==============================================
# Search & RAG Configuration
# ==============================================

# BM25 weight in hybrid search (0.0-1.0)
BM25_WEIGHT=0.4

# Vector weight in hybrid search (0.0-1.0)
VECTOR_WEIGHT=0.6

# Maximum results per search method
MAX_SEARCH_RESULTS=20

# Maximum chunks to use for RAG context
MAX_CONTEXT_CHUNKS=10

# ==============================================
# Development Tools (Optional)
# ==============================================

# Set log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Enable SQL query logging (true/false)
LOG_SQL_QUERIES=false